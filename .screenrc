activity "activity: window ~%"
vbell_msg "bell: window ~%"
vbellwait 2
allpartial off
autodetach on
bufferfile ~/.screen-exchange
shelltitle $HOST
defflow off
defmode 0620
defscrollback 16384
deflogin off
startup_message off

escape "`^`"
bind ' ' windowlist -b

term xterm-256color

hardstatus alwayslastline
hardstatus string '%{= kw}[%H] %?%-Lw%?%{y}(%{w}%n*%f%t%?(%u)%?%{y})%{w}%?%+Lw%?%?%= %{g}'

bind c screen 1
bind ^c screen 1
bind 0 select 10
screen 1
